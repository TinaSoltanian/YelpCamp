<% include ../partials/header %>
<div class="container">
    
    <div class="row">
        <h1 style="text-align: center;">Edit <%= campgound.name %></h1>
        <div style="width:30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campgound._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" value="<%= campgound.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" placeholder="price" min="0.01" step="0.01">
                </div>                  
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" value="<%= campgound.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" value="<%= campgound.description %>">
                </div>                
                <div class="form-group">
                    <button class="btn tbn-lg btn-primary btn-block">Submit!</button>
                </div>    
            </form> 
            <a href="/campgrounds">back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
