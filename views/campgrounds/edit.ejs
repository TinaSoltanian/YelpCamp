<% include ../partials/header %>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

<div class="row">
    <div class="col-md-4 col-sm-2">
        <div style="width:100%; margin: auto auto;">
           <image class="thumbnail" id="preview" src="<%= campground.image%>" ></image> 
        </div>
    </div>
    <div class="col-md-8 col-sm-2">
       <div class="row">
            <h1 style="margin: 10px;">Edit <%= campground.name %></h1>
            <div style="width:30%; margin: 10px;">
                <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <input class="form-control" type="text" name="campground[name]" id="name" value="<%= campground.name %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="campground[price]" id="price" value="<%= campground.price %>" min="0.01" step="0.01">
                    </div>    
                    <div class="form-group">
                        <label for="location">Location</label>
                        <input class="form-control" type="text" name="campground[location]" id="location" value="<%= campground.location %>">
                    </div>                
                    <div class="form-group">
                        <label for="image">Image</label>
                        <input class="form-control" type="file" name="image" id="image" accept="image/*" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="campground[description]" id="description" value="<%= campground.description %>">
                    </div>                
                    <div class="form-group">
                        <button class="btn tbn-lg btn-primary btn-block">Submit!</button>
                    </div>    
                </form> 
                <a href="/campgrounds">back</a>
            </div>
        </div>    
    </div>    
</div>


<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
    
            reader.onload = function (e) {
                $('#preview').attr('src', e.target.result);
            }
    
            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#image").change(function(){
        readURL(this);
    })
</script>
 
<% include ../partials/footer %>
