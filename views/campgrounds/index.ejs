<% include ../partials/header %>
    
    <header class="jumbotron">
        <div class="container">
             <h1>Welcome to YelpCamp</h1> 
             <p>View are hand picked camp grounds from all over the world</p>
             <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>             
             </p>
        </div>     
    </header>

    <div class="row text-center">
        <% campgronds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6" > 
                    <div class="thumbnail">
                      <img src="<%= campground.image %>" >                    
                        <div class="caption">
                            <h4><%= campground.name %> </h4>
                        </div>       
                        <p>
                            <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">More Info</a>
                        </p>
                    </div>
            </div>
        <% }) %>
    </div>

<% include ../partials/footer %>
